
<a class="usa-button trigger action {{#if isOutline }}usa-button-outline {{/if}}action-{{ buttonStatus }}">
  <div class="trigger-content row-center-x">
    <div class="trigger-icon col-fit">
      {{ render '@icon-square--org-small' }}
    </div>
    <div class="trigger-text col-fill">
      {{ buttonText }}
    </div>
    <div class="trigger-action col-fit">
      {{#if isOpen}}
        {{#unless isOutline}}
          {{ render '@icon-ui--chevron-up-white' }}
        {{else}}
          {{ render '@icon-ui--chevron-up' }}
        {{/unless}}
      {{else}}
        {{#unless isOutline}}
          {{ render '@icon-ui--chevron-down-white' }}
        {{else}}
          {{ render '@icon-ui--chevron-down' }}
        {{/unless}}
      {{/if}}
    </div>
  </div>
</a>
